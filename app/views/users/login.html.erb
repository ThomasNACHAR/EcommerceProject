<%= turbo_frame_tag "modal" do %>
  <section class="fixed top-0 left-0 w-full min-h-screen">
    <%= link_to params[:original_url], data: {turbo_frame: "_top"} do %>
      <div class="inset-0 bg-black opacity-30 z-40 fixed cursor-pointer"></div>
    <% end %>
    <section class="w-full flex justify-center items-center min-h-screen">
      <div class="w-1/3 rounded-xl bg-theme border-4 border-primary shadow-xl shadow-white z-50">
        <h2 class="text-center font-extrabold text-6xl my-8">Connexion</h2>
        <%= link_to "Pas encore inscrit ? C'est par ici", register_user_path, data: {turbo_frame: "_top"}, class: "underline p-8"  %>
        <%= render "users/login-form" %>
      </div>
    </section>
  </section>
<% end %>