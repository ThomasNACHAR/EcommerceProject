<div class="grid grid-cols-3 m-8 gap-4">
  <% @products.each do |product| %>
    <div class="flex flex-col border-2 border-primary">
      <%= image_tag "no-image.png", class: "h-64 w-full" %>
      <div class="p-8">
        <div class="flex justify-center items-center gap-8">
          <p class="text-center font-bold text-3xl"><%= product.label %></p>
          <%= link_to edit_admin_product_path(product), data: { turbo_frame: "products_dashboard "} do %>
            <%= image_tag "icons/pencil.svg" %>
          <% end %>
          <%= form_with url: admin_product_path(product), data: { turbo_frame: 'categories_dashboard' }, method: :delete do |form| %>
            <%= form.button type: :submit do %>
              <%= image_tag("icons/x.svg") %>
            <% end %>
          <% end %>
        </div>
        <div class="grid grid-cols-2 my-8">
          <div class="flex flex-col font-bold gap-4 justify-center items-center">
            <p><%= product.category.label %></p>
            <p>x<%= product.quantity %></p>
            <p><%= product.price*0.01 %>â‚¬</p>
          </div>
          <p class="italic"><%= product.description %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
